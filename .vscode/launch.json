{
	"version": "0.2.0",
	"configurations": [
	  {
		"name": "Debug C Program",
		"type": "cppdbg",
		"request": "launch",
		"program": "${workspaceFolder}/program", // Path to your compiled executable
		"args": [], // Command-line arguments if any
		"stopAtEntry": false,
		"cwd": "${workspaceFolder}", // Working directory
		"environment": [],
		"externalConsole": true, // Use external terminal for program output
		"MIMode": "gdb", // Use GDB as the debugger
		"miDebuggerPath": "/usr/bin/gdb", // Path to GDB (adjust for your system)
		"setupCommands": [
		  {
			"description": "Enable pretty-printing for gdb",
			"text": "-enable-pretty-printing",
			"ignoreFailures": true
		  }
		]
	  }
	]
  }
  